@model SomeeMVC_4.Models.UsersModel

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-3">
    <div class="card-header"><i class="fa fa-fw fa-user"></i>Đổi mật khẩu</div>
    <div class="card-body">
        @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post)) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

            <div class="form-group">
                <label for="password">Mật khẩu hiện tại</label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password", @placeholder = "Mật khẩu hiện tại" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            
            <div class="form-group">
                <label for="new-password">Mật khẩu mới</label>
                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @id = "new-password", @placeholder = "Mật khẩu mới" })
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>
            
            <div class="form-group">
                <label for="confirm-new-password">Xác nhận mật khẩu mới</label>
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @id = "confirm-new-password", @placeholder = "Xác nhận mật khẩu mới" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
            
            <p>
                <input type="submit" class="btn btn-primary" value="Lưu lại" />
            </p>
            <p>@ViewBag.UpdateResult</p>
        }
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>