@model SomeeMVC_4.Models.UsersModel
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Đăng nhập vào trang quản trị aug.somee.com</title>
  <link rel="icon" href="~/Embedded/aug/images/icon.png" />
  <link rel="stylesheet" type="text/css" href="~/Embedded/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="~/Embedded/bootstrap/css/bootstrap-theme.min.css" />
  <link href="~/Embedded/aug/css/sb-admin.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="~/Embedded/aug/css/site.css" />
</head>
<body class="bg-dark">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Đăng nhập</div>
      <div class="card-body">
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
          <div class="form-group">
            <label for="username">Tên đăng nhập</label>
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @id = "username", @placeholder = "Tên đăng nhập" })
            @Html.ValidationMessageFor(model => model.Username)
          </div>
          <div class="form-group">
            <label for="password">Mật khẩu</label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "password", @placeholder = "Mật khẩu" })
            @Html.ValidationMessageFor(model => model.Password)
          </div>
          <input type="submit" class="btn btn-primary btn-block" value="Đăng nhập" />
        }
        <div class="text-center">
          <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
